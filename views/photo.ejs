<%- include('partials/_header') -%>
<body>
	<div class="tm-page-wrap mx-auto">
		<div class="position-relative">
            <%- include('partials/_navigation') -%>

			<div class="tm-welcome-container tm-fixed-header tm-fixed-header-1">
				<div class="text-center">
					<p class="pt-5 px-3 tm-welcome-text tm-welcome-text-2 mb-1 text-white mx-auto">Background image can be fixed. Content will simply slide over.</p>                	
				</div>                
            </div>

			<!-- Header image -->
            <div id="tm-fixed-header-bg"></div> 
		</div>

		<!-- Page content -->
		<div class="container-fluid">
			<div class="mx-auto tm-content-container">
				<main>
                    
                    <div class="row mb-5 pb-4">
						<div class="offset-1 col-10">
							<!-- Video player 1422x800 -->
							<img alt="image" src="<%=photo.image%>" width="100%" height="400px"/>				 				  

							
						</div>
					</div>
					<div class="row mb-5 pb-5">
						<div class="col-xl-6 col-lg-6 offset-1">
							<!-- Video description -->
							<div class="tm-video-description-box">
								<h2 class="mb-5 tm-video-title"><%=photo.title%></h2>
								<p class="mb-4"><%=photo.description%></p>
							</div>							
						</div>
						<div class="col-xl-4 col-lg-4">
							<!-- Share box -->
							<div class="tm-bg-gray tm-share-box">

								<div class="m-3">
									<a href="/photos/edit/<%=photo._id%>" class="btn btn-primary p-0 tm-btn-animate tm-btn-download tm-icon-download"><span>Update</span></a>	
								</div>	
                                
								<div class="m-3">
									<a href="/photos/<%=photo._id%>?_method=DELETE" class="btn btn-danger p-0 tm-btn-animate tm-btn-download tm-icon-download" onclick="return confirm('ARE YOU SURE')"><span>Delete</span></a>	
								</div>							
							</div>
						</div>
					</div>
				</main>

				<!-- Subscribe form and footer links -->
                <%- include('partials/_footer') -%>
</body>
</html>